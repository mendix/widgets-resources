{
    "version": "independent",
    "packages": ["packages/*/*", "scripts/data"],
    "command": {
        "bootstrap": {
            "npmClientArgs": ["--package-lock", "--legacy-peer-deps"]
        },
        "version": {
            "ignoreChanges": ["*.md"],
            "message": "chore: release",
            "allowBranch": "master"
        }
    },
    "useNx": true
}
