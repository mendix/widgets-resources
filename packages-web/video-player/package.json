{
    "name": "videoplayer",
    "widgetName": "VideoPlayer",
    "version": "1.0.0",
    "description": "Player for YouTube, Dailymotion, Vimeo and Mp4 videos",
    "copyright": "2019 Mendix",
    "author": "Mendix",
    "license": "Apache-2.0",
    "config": {
        "widgetPath": "../test-project/mxproject/widgets",
        "projectPath": "../test-project/mxproject",
        "mendixHost": "http://localhost:8080/",
        "developmentPort": "3000",
        "subprojectFolder": "packages-web/video-player"
    },
    "packagePath": "com.mendix.widget.web",
    "scripts": {
        "start": "concurrently \"pluggable-widgets-tools start:server --open --subprojectPath $npm_package_config_subprojectFolder\" \"npm:dev\"",
        "dev": "pluggable-widgets-tools start:ts --subprojectPath $npm_package_config_subprojectFolder",
        "build": "pluggable-widgets-tools build:ts --subprojectPath $npm_package_config_subprojectFolder",
        "format": "pluggable-widgets-tools format --subprojectPath $npm_package_config_subprojectFolder",
        "lint": "eslint --config ../../.eslintrc.js --ext .jsx,.js,.ts,.tsx src/",
        "test": "jest --config ../../scripts/test/jest.web.config.js",
        "test:unit": "pluggable-widgets-tools test:unit --coverage --subprojectPath $npm_package_config_subprojectFolder",
        "test:e2e": "export URL=https://videoplayer-sandbox.mxapps.io/ || set URL=https://videoplayer-sandbox.mxapps.io/ && pluggable-widgets-tools test:e2e:ts --subprojectPath $npm_package_config_subprojectFolder",
        "test:e2e:dev": "export DEBUG=true || set DEBUG=true && pluggable-widgets-tools test:e2e:ts --subprojectPath $npm_package_config_subprojectFolder",
        "prerelease": "npm run lint",
        "release": "pluggable-widgets-tools release:ts --subprojectPath $npm_package_config_subprojectFolder"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mendix/video-player"
    },
    "bugs": {
        "url": "https://github.com/mendix/video-player/issues"
    },
    "devDependencies": {
        "@types/react-resize-detector": "^4.0.1"
    },
    "dependencies": {
        "react-resize-detector": "^4.1.3"
    }
}
