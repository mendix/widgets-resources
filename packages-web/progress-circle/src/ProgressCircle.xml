<?xml version="1.0" encoding="utf-8"?>
<widget id="com.mendix.widget.custom.progresscircle.ProgressCircle" needsEntityContext="true" offlineCapable="true" xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../xsd/widget.xsd">
    <name>Progress circle</name>
    <description>Displays a progress in a circle</description>
    <icon></icon>
    <properties>
        <property key="textSize" type="enumeration" defaultValue="h2">
            <caption>Text style</caption>
            <category>Display</category>
            <description>Size of the progress text</description>
            <enumerationValues>
                <enumerationValue key="text">Text</enumerationValue>
                <enumerationValue key="h1">Heading 1</enumerationValue>
                <enumerationValue key="h2">Heading 2</enumerationValue>
                <enumerationValue key="h3">Heading 3</enumerationValue>
                <enumerationValue key="h4">Heading 4</enumerationValue>
                <enumerationValue key="h5">Heading 5</enumerationValue>
                <enumerationValue key="h6">Heading 6</enumerationValue>
            </enumerationValues>
        </property>
        <property key="animate" type="boolean" defaultValue="true">
            <caption>Animate</caption>
            <category>Display</category>
            <description>Animates when the progress circle is loaded and updated</description>
        </property>
        <property key="positiveValueColor" type="enumeration" defaultValue="primary">
            <caption>Positive style</caption>
            <category>Display</category>
            <description>Color of the circle with a positive progress value</description>
            <enumerationValues>
                <enumerationValue key="primary">Primary</enumerationValue>
                <enumerationValue key="inverse">Inverse</enumerationValue>
                <enumerationValue key="info">Info</enumerationValue>
                <enumerationValue key="success">Success</enumerationValue>
                <enumerationValue key="warning">Warning</enumerationValue>
                <enumerationValue key="danger">Danger</enumerationValue>
            </enumerationValues>
        </property>
        <property key="negativeValueColor" type="enumeration" defaultValue="danger">
            <caption>Negative style</caption>
            <category>Display</category>
            <description>Color of the circle with a negative progress value</description>
            <enumerationValues>
                <enumerationValue key="primary">Primary</enumerationValue>
                <enumerationValue key="inverse">Inverse</enumerationValue>
                <enumerationValue key="info">Info</enumerationValue>
                <enumerationValue key="success">Success</enumerationValue>
                <enumerationValue key="warning">Warning</enumerationValue>
                <enumerationValue key="danger">Danger</enumerationValue>
            </enumerationValues>
        </property>
        <property key="circleThickness" type="integer" defaultValue="6">
            <caption>Circle thickness</caption>
            <category>Display</category>
            <description>Thickness of the progress circle (thinkness is limited to 30)</description>
        </property>
        <property key="progressAttribute" type="attribute">
            <caption>Progress attribute</caption>
            <category>Data</category>
            <description>Holds the progress value</description>
            <attributeTypes>
                <attributeType name="Integer"/>
                <attributeType name="Decimal"/>
                <attributeType name="Long"/>
            </attributeTypes>
        </property>
        <property key="maximumValueAttribute" type="attribute" required="false">
            <caption>Maximum value attribute</caption>
            <category>Data</category>
            <description>Holds the highest progress value which must be greater than 0. If not set, maximum value defaults to 100</description>
            <attributeTypes>
                <attributeType name="Integer" />
                <attributeType name="Decimal" />
                <attributeType name="Long" />
            </attributeTypes>
        </property>
        <property key="onClickEvent" type="enumeration" defaultValue="doNothing">
            <caption>On click</caption>
            <category>Events</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="doNothing">Do nothing</enumerationValue>
                <enumerationValue key="showPage">Show a page</enumerationValue>
                <enumerationValue key="callMicroflow">Call a microflow</enumerationValue>
            </enumerationValues>
        </property>
        <property key="page" type="form" required="false">
            <caption>Page</caption>
            <category>Events</category>
            <description>The page that will be opened on click</description>
        </property>
        <property key="microflow" type="microflow" required="false">
            <caption>Microflow</caption>
            <category>Events</category>
            <description>The microflow that will be executed on click</description>
            <returnType type="Void" />
        </property>
    </properties>
</widget>
