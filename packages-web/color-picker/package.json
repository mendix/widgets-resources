        "webdriverio": "^4.12.0",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.2.3",
        "webpack-dev-server": "^3.2.1",
        "webpack-merge": "^4.2.1",
        "webworkify-webpack": "^2.1.5"
    },
    "dependencies": {
        "classnames": "^2.2.6",
        "react-color": "^2.17.0"
    }
}
