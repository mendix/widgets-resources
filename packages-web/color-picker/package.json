{
    "name": "color-picker-web",
    "widgetName": "ColorPicker",
    "version": "1.1.0",
    "description": "Change a color using a color input",
    "copyright": "Mendix BV",
    "scripts": {
        "start": "nodemon --watch webpack.config.js --watch Gruntfile.js --exec \"grunt",
        "typeCheck": "tsc --noEmit",
        "emit": "tsc",
        "pretest": "tsc && npm run lint && npm run build",
        "test": "npm run test:unit && npm run test:conditional",
        "test:conditional": "node ./node_modules/mendix-widget-build-script/dist/CheckPullRequestFromFork.js && echo 'Skip tests on forked pull request' || npm run deployAndTest",
        "test:dev": "karma start",
        "test:unit": "karma start --single-run --codeCoverage && node tests/remap.js",
        "test:e2e": "tsc -p ./tests/e2e/tsconfig.json && wdio ./tests/e2e/wdio.conf.js",
        "test:e2e:dev": "tsc -p ./tests/e2e/tsconfig.json && set DEBUG=true&& wdio ./tests/e2e/wdio.conf.js",
        "lint": "tslint -c tslint.json '**/*.ts' '**/*.tsx' --exclude '**/node_modules/**'",
        "lint:fix": "npm run lint -- --fix",
        "deploy": " npm run updateProject && npm run deployApp",
        "build": "grunt release",
        "updateProject": "node ./node_modules/mendix-widget-build-script/dist/UpdateMxProject.js",
        "deployApp": "node ./node_modules/mendix-widget-build-script/dist/DeployMxApp.js",
        "deployAndTest": "npm run deploy && npm run test:e2e"
    },
    "pre-commit": [
        "typeCheck",
        "lint"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/mendixlabs/color-picker"
    },
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/mendixlabs/color-picker/issues"
    },
    "devDependencies": {
        "@types/classnames": "^2.2.7",
        "@types/core-js": "^2.5.0",
        "@types/enzyme": "^3.9.0",
        "@types/enzyme-adapter-react-16": "^1.0.5",
        "@types/jasmine": "^3.3.9",
        "@types/karma": "^3.0.2",
        "@types/node": "^11.11.1",
        "@types/react": "^16.8.7",
        "@types/react-color": "^2.14.1",
        "@types/react-dom": "^16.8.2",
        "@types/webdriverio": "^4.10.2",
        "check-dependencies": "^1.1.0",
        "copy-webpack-plugin": "^5.0.1",
        "core-js": "^2.6.5",
        "css-loader": "^2.1.1",
        "enzyme": "^3.9.0",
        "enzyme-adapter-react-16": "^1.10.0",
        "extract-text-webpack-plugin": "^4.0.0-beta.0",
        "file-loader": "^3.0.1",
        "grunt": "^1.0.3",
        "grunt-check-dependencies": "^1.0.0",
        "grunt-contrib-clean": "^2.0.0",
        "grunt-contrib-compress": "^1.4.3",
        "grunt-contrib-copy": "^1.0.0",
        "grunt-contrib-watch": "^1.1.0",
        "grunt-file-append": "0.0.7",
        "grunt-newer": "^1.3.0",
        "grunt-webpack": "^3.1.3",
        "istanbul": "^0.4.5",
        "istanbul-instrumenter-loader": "^3.0.1",
        "jasmine": "^3.3.1",
        "json-loader": "^0.5.7",
        "json-source-map": "^0.4.0",
        "karma": "^4.0.1",
        "karma-chrome-launcher": "^2.2.0",
        "karma-coverage": "^1.1.2",
        "karma-jasmine": "^2.0.1",
        "karma-jasmine-html-reporter": "^1.4.0",
        "karma-remap-istanbul": "^0.6.0",
        "karma-sourcemap-loader": "^0.3.7",
        "karma-spec-reporter": "0.0.32",
        "karma-webpack": "^3.0.5",
        "mendix-client": "^7.15.7",
        "mendix-widget-build-script": "^1.0.3",
        "node-sass": "^4.11.0",
        "nodemon": "^1.18.10",
        "pre-commit": "^1.2.2",
        "raw-loader": "^1.0.0",
        "react": "^16.8.4",
        "react-dom": "^16.8.4",
        "react-test-renderer": "^16.8.4",
        "remap-istanbul": "^0.13.0",
        "sass-loader": "^7.1.0",
        "source-map-loader": "^0.2.4",
        "style-loader": "^0.23.1",
        "ts-loader": "^5.3.3",
        "tslint": "^5.13.1",
        "tslint-eslint-rules": "^5.4.0",
        "typescript": "^3.3.3333",
        "uglify-es": "^3.3.9",
        "uglifyjs-webpack-plugin": "^2.1.2",
        "url-loader": "^1.1.2",
        "wdio-dot-reporter": "^0.0.10",
        "wdio-jasmine-framework": "^0.3.8",
        "wdio-selenium-standalone-service": "^0.0.12",
