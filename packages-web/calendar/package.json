    "webpack-merge": "^4.1.5",
    "webworkify-webpack": "^2.1.3"
  },
  "dependencies": {
    "classnames": "2.2.6",
    "date-arithmetic": "3.1.0",
    "moment": "^2.23.0",
    "react-big-calendar": "0.19.0",
    "react-dnd": "2.6.0",
    "react-dnd-html5-backend": "^5.0.1"
  }
}
