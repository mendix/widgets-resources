<?xml version="1.0" encoding="utf-8" ?>
<widget id="com.mendix.widget.custom.calendar.Calendar" needsEntityContext="true" offlineCapable="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Calendar</name>
    <description>Display and manage calendar events</description>
    <icon/>
    <properties>
        <property key="dataSource" type="enumeration" defaultValue="context">
            <caption>Data source</caption>
            <category>Data source</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="context">Context</enumerationValue>
                <enumerationValue key="XPath">Database</enumerationValue>
                <enumerationValue key="microflow">Microflow</enumerationValue>
                <enumerationValue key="nanoflow">Nanoflow</enumerationValue>
            </enumerationValues>
        </property>
        <property key="eventEntity" type="entity" required="false">
            <caption>Event entity</caption>
            <category>Data source</category>
            <description/>
        </property>
        <property key="entityConstraint" type="entityConstraint" entityProperty="eventEntity" required="false">
            <caption>XPath</caption>
            <category>Data source</category>
            <description/>
        </property>
        <property key="dataSourceMicroflow" type="microflow" required="false">
            <caption>Data source microflow</caption>
            <category>Data source</category>
            <description></description>
            <returnType type="Void"/>
        </property>
        <property key="dataSourceNanoflow" type="nanoflow" required="false">
            <caption>Data source nanoflow</caption>
            <category>Data source</category>
            <description></description>
            <returnType type="Void"/>
        </property>
        <property key="titleAttribute" type="attribute" entityProperty="eventEntity" required="false">
            <caption>Title</caption>
            <category>Data source</category>
            <description/>
            <attributeTypes>
                <attributeType name="String"/>
            </attributeTypes>
        </property>
        <property key="allDayAttribute" type="attribute" entityProperty="eventEntity" required="false">
            <caption>All day</caption>
            <category>Data source</category>
            <description/>
            <attributeTypes>
                <attributeType name="Boolean"/>
            </attributeTypes>
        </property>
        <property key="startAttribute" type="attribute" entityProperty="eventEntity" required="false">
            <caption>Start</caption>
            <category>Data source</category>
            <description/>
            <attributeTypes>
                <attributeType name="DateTime"/>
            </attributeTypes>
        </property>
        <property key="endAttribute" type="attribute" entityProperty="eventEntity" required="false">
            <caption>End</caption>
            <category>Data source</category>
            <description/>
            <attributeTypes>
                <attributeType name="DateTime"/>
            </attributeTypes>
        </property>
        <property key="eventColor" type="attribute" entityProperty="eventEntity" required="false">
            <caption>Event color</caption>
            <category>Data source</category>
            <description/>
            <attributeTypes>
                <attributeType name="Enum" />
                <attributeType name="String" />
            </attributeTypes>
        </property>
        <property key="views" type="enumeration" defaultValue="standard">
            <caption>View</caption>
            <category>Appearance</category>
            <description>NB: When using Custom view, month view must be selected</description>
            <enumerationValues>
                <enumerationValue key="standard">Standard</enumerationValue>
                <enumerationValue key="custom">Custom</enumerationValue>
            </enumerationValues>
        </property>
        <property key="customViews" type="object" isList="true" required="false">
            <caption>Custom toolbar</caption>
            <category>Appearance</category>
            <description/>
            <properties>
                <property key="customView" type="enumeration" defaultValue="month">
                    <caption>Views</caption>
                    <category>Appearance</category>
                    <description/>
                        <enumerationValues>
                        <enumerationValue key="month">Month</enumerationValue>
                        <enumerationValue key="week">Week</enumerationValue>
                        <enumerationValue key="work_week">Work week</enumerationValue>
                        <enumerationValue key="day">Day</enumerationValue>
                        <enumerationValue key="agenda">Agenda</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="customCaption" type="translatableString" required="false">
                    <caption>Button caption</caption>
                    <category>Appearance</category>
                    <description/>
                </property>
                <property key="dayFormat" type="translatableString" required="false">
                    <caption>Custom day format</caption>
                    <category>Custom formats</category>
                    <description/>
                </property>
                <property key="weekdayFormat" type="translatableString" required="false">
                    <caption>Custom week day format</caption>
                    <category>Custom formats</category>
                    <description/>
                </property>
                <property key="timeGutterFormat" type="translatableString" required="false">
                    <caption>Custom time gutter format</caption>
                    <category>Custom formats</category>
                    <description/>
                </property>
                <property key="monthHeaderFormat" type="translatableString" required="false">
                    <caption>Custom month header format</caption>
                    <category>Custom formats</category>
                    <description/>
                </property>
                <property key="dayHeaderFormat" type="translatableString" required="false">
                    <caption>Custom day header format</caption>
                    <category>Custom formats</category>
                    <description/>
                </property>
            </properties>
        </property>
        <property key="defaultView" type="enumeration" defaultValue="month">
            <caption>Inital selected view</caption>
            <category>Appearance</category>
            <description/>
                <enumerationValues>
                    <enumerationValue key="day">Day</enumerationValue>
                    <enumerationValue key="week">Week</enumerationValue>
                    <enumerationValue key="month">Month</enumerationValue>
                </enumerationValues>
        </property>
        <property key="startPositionAttribute" type="attribute" isPath="yes" pathType="reference" required="false">
            <caption>Start position attribute</caption>
            <category>Appearance</category>
            <description>The date on which the calendar should start</description>
            <attributeTypes>
                <attributeType name="DateTime"/>
            </attributeTypes>
        </property>
        <property key="popup" type="boolean" defaultValue="true">
            <caption>Show truncated events</caption>
            <category>Appearance</category>
            <description>Show truncated events in an overlay when you click the "+x more" link</description>
        </property>
        <property key="selectable" type="boolean" defaultValue="true">
            <caption>Editable</caption>
            <category>Appearance</category>
            <description/>
        </property>
        <property key="widthUnit" type="enumeration" defaultValue="percentage">
            <caption>Width unit</caption>
            <category>Appearance</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="percentage">Percentage</enumerationValue>
                <enumerationValue key="pixels">Pixels</enumerationValue>
            </enumerationValues>
        </property>
        <property key="width" type="integer" defaultValue="100">
            <caption>Width</caption>
            <category>Appearance</category>
            <description/>
        </property>
        <property key="heightUnit" type="enumeration" defaultValue="pixels">
            <caption>Height unit</caption>
            <category>Appearance</category>
            <description>'Percentage of width' is the aspect ratio, 'Pixels' is absolute. Warning: When using 'Percentage of parent' the parent container must have an absolute height, else nothing is displayed.</description>
            <enumerationValues>
                <enumerationValue key="percentageOfWidth">Percentage of width</enumerationValue>
                <enumerationValue key="pixels">Pixels</enumerationValue>
                <enumerationValue key="percentageOfParent">Percentage of parent</enumerationValue>
            </enumerationValues>
        </property>
        <property key="height" type="integer" defaultValue="580">
            <caption>Height</caption>
            <category>Appearance</category>
            <description/>
        </property>
        <property key="onClickEvent" type="enumeration" defaultValue="doNothing">
            <caption>On click event</caption>
            <category>Events</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="doNothing">Do nothing</enumerationValue>
                <enumerationValue key="showPage">Show a page</enumerationValue>
                <enumerationValue key="callMicroflow">Call a microflow</enumerationValue>
                <enumerationValue key="callNanoflow">Call a nanoflow</enumerationValue>
            </enumerationValues>
        </property>
        <property key="onClickOpenPageAs" type="enumeration" defaultValue="content">
            <caption>On click open page as</caption>
            <category>Events</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="content">Full page</enumerationValue>
                <enumerationValue key="popup">Popup</enumerationValue>
                <enumerationValue key="modal">Blocking popup</enumerationValue>
            </enumerationValues>
        </property>
        <property key="onClickPage" type="form" required="false">
            <caption>on click page</caption>
            <category>Events</category>
            <description>The page that will be opened on clicking an event</description>
        </property>
        <property key="onClickMicroflow" type="microflow" required="false">
            <caption>On click microflow</caption>
            <category>Events</category>
            <description>The microflow that will be executed on clicking an event</description>
            <returnType type="Void" />
        </property>
        <property key="onClickNanoflow" type="nanoflow" required="false">
            <caption>On click nanoflow</caption>
            <category>Events</category>
            <description>The nanoflow that will be executed on clicking an event</description>
            <returnType type="Void" />
        </property>
        <property key="onCreate" type="enumeration" defaultValue="doNothing">
            <caption>On create</caption>
            <category>Events</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="doNothing">Do nothing</enumerationValue>
                <enumerationValue key="showPage">Show a page</enumerationValue>
                <enumerationValue key="callMicroflow">Call a microflow</enumerationValue>
                <enumerationValue key="callNanoflow">Call a nanoflow</enumerationValue>
            </enumerationValues>
        </property>
        <property key="onCreateOpenPageAs" type="enumeration" defaultValue="content">
            <caption>On create open page as</caption>
            <category>Events</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="content">Full page</enumerationValue>
                <enumerationValue key="popup">Popup</enumerationValue>
                <enumerationValue key="modal">Blocking popup</enumerationValue>
            </enumerationValues>
        </property>
        <property key="onCreatePage" type="form" required="false">
            <caption>On create page</caption>
            <category>Events</category>
            <description>The page that will be opened on clickicking a slot</description>
        </property>
        <property key="onCreateMicroflow" type="microflow" required="false">
            <caption>On create microflow</caption>
            <category>Events</category>
            <description>The microflow that will be executed on clicking a slot</description>
            <returnType type="Void" />
        </property>
        <property key="onCreateNanoflow" type="nanoflow" required="false">
            <caption>On create nanoflow</caption>
            <category>Events</category>
            <description>The nanoflow that will be executed on clicking a slot</description>
            <returnType type="Void" />
        </property>
        <property key="onChangeEvent" type="enumeration" defaultValue="doNothing">
            <caption>On change event</caption>
            <category>Events</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="doNothing">Do nothing</enumerationValue>
                <enumerationValue key="callMicroflow">Call a microflow</enumerationValue>
                <enumerationValue key="callNanoflow">Call a nanoflow</enumerationValue>
            </enumerationValues>
        </property>
        <property key="onChangeMicroflow" type="microflow" required="false">
            <caption>On change microflow</caption>
            <category>Events</category>
            <description>The microflow that will be executed on droping / resizing an event</description>
            <returnType type="Void" />
        </property>
        <property key="onChangeNanoflow" type="nanoflow" required="false">
            <caption>On change nanoflow</caption>
            <category>Events</category>
            <description>The nanoflow that will be executed on droping / resizing an event</description>
            <returnType type="Void" />
        </property>
    </properties>
</widget>
