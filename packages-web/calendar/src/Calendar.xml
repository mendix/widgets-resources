<?xml version="1.0" encoding="utf-8" ?>
<widget id="com.mendix.widget.custom.calendar.Calendar" needsEntityContext="true" offlineCapable="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Calendar</name>
    <description>Display and manage calendar events</description>
    <icon></icon>
    <properties>
        <property key="dataSource" type="enumeration" defaultValue="context">
            <caption>Data source</caption>
            <category>Data source</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="context">Context</enumerationValue>
                <enumerationValue key="XPath">Database</enumerationValue>
                <enumerationValue key="microflow">Microflow</enumerationValue>
                <enumerationValue key="nanoflow">Nanoflow</enumerationValue>
            </enumerationValues>
        </property>
        <property key="eventEntity" type="entity" allowNonPersistableEntities="true">
            <caption>Event entity</caption>
            <category>Data source</category>
            <description>With data context, this entity should be equal to the containing dataview</description>
        </property>
        <property key="entityConstraint" type="entityConstraint" entityProperty="eventEntity" required="false">
            <caption>XPath</caption>
            <category>Data source</category>
            <description/>
        </property>
        <property key="dataSourceMicroflow" type="microflow" required="false">
            <caption>Data source microflow</caption>
            <category>Data source</category>
            <description></description>
            <returnType type="Object" isList="true" entityProperty="eventEntity"/>
        </property>
        <property key="dataSourceNanoflow" type="nanoflow" required="false">
            <caption>Data source nanoflow</caption>
            <category>Data source</category>
            <description></description>
            <returnType type="Object" isList="true" entityProperty="eventEntity"/>
        </property>
        <property key="titleAttribute" type="attribute" entityProperty="eventEntity" required="false">
            <caption>Title</caption>
            <category>Data source</category>
            <description/>
            <attributeTypes>
                <attributeType name="String"/>
            </attributeTypes>
        </property>
        <property key="allDayAttribute" type="attribute" entityProperty="eventEntity" required="false">
            <caption>All day</caption>
            <category>Data source</category>
            <description/>
            <attributeTypes>
                <attributeType name="Boolean"/>
            </attributeTypes>
        </property>
        <property key="startAttribute" type="attribute" entityProperty="eventEntity">
            <caption>Start</caption>
            <category>Data source</category>
            <description/>
            <attributeTypes>
                <attributeType name="DateTime"/>
            </attributeTypes>
        </property>
        <property key="endAttribute" type="attribute" entityProperty="eventEntity">
            <caption>End</caption>
            <category>Data source</category>
            <description/>
            <attributeTypes>
                <attributeType name="DateTime"/>
            </attributeTypes>
        </property>
        <property key="eventColor" type="attribute" entityProperty="eventEntity" required="false">
            <caption>Event color</caption>
            <category>Data source</category>
            <description>Attribute containing a valid html color eg: red #FF0000 ragb(250,10,20) rgba(10,10,10, 0.5)</description>
            <attributeTypes>
                <attributeType name="Enum" />
                <attributeType name="String" />
            </attributeTypes>
        </property>
        <property key="view" type="enumeration" defaultValue="standard">
            <caption>View</caption>
            <category>View</category>
            <description>Standard has Day, Week and Month</description>
            <enumerationValues>
                <enumerationValue key="standard">Standard</enumerationValue>
                <enumerationValue key="custom">Custom</enumerationValue>
            </enumerationValues>
        </property>
        <property key="defaultView" type="enumeration" defaultValue="month">
            <caption>Initial selected view</caption>
            <category>View</category>
            <description>Work week and agenda are only available in custom views</description>
            <enumerationValues>
                <enumerationValue key="day">Day</enumerationValue>
                <enumerationValue key="week">Week</enumerationValue>
                <enumerationValue key="month">Month</enumerationValue>
                <enumerationValue key="work_week">(Work week)</enumerationValue>
                <enumerationValue key="agenda">(Agenda)</enumerationValue>
            </enumerationValues>
        </property>
        <property key="customViews" type="object" isList="true" required="false">
            <caption>Custom views</caption>
            <category>View</category>
            <description/>
            <properties>
                <property key="customView" type="enumeration" defaultValue="month">
                    <caption>Views</caption>
                    <category>Appearance</category>
                    <description/>
                        <enumerationValues>
                        <enumerationValue key="month">Month</enumerationValue>
                        <enumerationValue key="week">Week</enumerationValue>
                        <enumerationValue key="work_week">Work week</enumerationValue>
                        <enumerationValue key="day">Day</enumerationValue>
                        <enumerationValue key="agenda">Agenda</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="customCaption" type="translatableString" required="false">
                    <caption>Button caption</caption>
                    <category>Appearance</category>
                    <description/>
                </property>
                <property key="dateFormat" type="translatableString" required="false">
                    <caption>Date format</caption>
                    <category>Custom formats</category>
                    <description/>
                </property>
                <property key="dayFormat" type="translatableString" required="false">
                    <caption>Day format</caption>
                    <category>Custom formats</category>
                    <description/>
                </property>
                <property key="weekdayFormat" type="translatableString" required="false">
                    <caption>Weekday format</caption>
                    <category>Custom formats</category>
                    <description/>
                </property>
                <property key="timeGutterFormat" type="translatableString" required="false">
                    <caption>Time gutter format</caption>
                    <category>Custom formats</category>
                    <description/>
                </property>
                <property key="monthHeaderFormat" type="translatableString" required="false">
                    <caption>Month header format</caption>
                    <category>Custom formats</category>
                    <description/>
                </property>
                <property key="dayHeaderFormat" type="translatableString" required="false">
                    <caption>Day header format</caption>
                    <category>Custom formats</category>
                    <description/>
                </property>
                <property key="agendaDateFormat" type="translatableString" required="false">
                    <caption>Agenda date format</caption>
                    <category>Custom formats</category>
                    <description/>
                </property>
                <property key="agendaTimeFormat" type="translatableString" required="false">
                    <caption>Agenda time format</caption>
                    <category>Custom formats</category>
                    <description/>
                </property>
                <property key="eventTimeRangeStartFormat" type="translatableString" required="false">
                    <caption>Event time range start format</caption>
                    <category>Custom formats</category>
                    <description/>
                </property>
                <property key="eventTimeRangeEndFormat" type="translatableString" required="false">
                    <caption>Event time range end format</caption>
                    <category>Custom formats</category>
                    <description/>
                </property>
            </properties>
        </property>
        <property key="executeOnViewChange" type="boolean" defaultValue="false">
            <caption>Refresh data source on view change</caption>
            <category>View</category>
            <description>For data source microflow and nanoflow, enable to retrieve a sub set of large data set based on view start and end attribute</description>
        </property>
        <property key="viewStartAttribute" type="attribute" isPath="optional" pathType="reference" required="false">
            <caption>View start attribute</caption>
            <category>View</category>
            <description>The date on which the calendar view starts, will be updated with `Refresh data source` before the view changes</description>
            <attributeTypes>
                <attributeType name="DateTime"/>
            </attributeTypes>
        </property>
        <property key="viewEndAttribute" type="attribute" required="false" allowNonPersistableEntities="true">
            <caption>View end attribute</caption>
            <category>View</category>
            <description>The date on which the calendar view ends, will be updated with `Refresh data source` before the view changes</description>
            <attributeTypes>
                <attributeType name="DateTime"/>
            </attributeTypes>
        </property>
        <property key="popup" type="boolean" defaultValue="true">
            <caption>Show truncated events</caption>
            <category>View</category>
            <description>Show truncated events in an overlay when you click the "+x more" link</description>
        </property>
        <property key="editable" type="enumeration" defaultValue="default">
            <caption>Editable</caption>
            <category>View</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="default">Default</enumerationValue>
                <enumerationValue key="never">Never</enumerationValue>
            </enumerationValues>
        </property>
        <property key="enableCreate" type="boolean" defaultValue="true">
            <caption>Enable create</caption>
            <category>View</category>
            <description/>
        </property>
        <property key="widthUnit" type="enumeration" defaultValue="percentage">
            <caption>Width unit</caption>
            <category>Appearance</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="percentage">Percentage</enumerationValue>
                <enumerationValue key="pixels">Pixels</enumerationValue>
            </enumerationValues>
        </property>
        <property key="width" type="integer" defaultValue="100">
            <caption>Width</caption>
            <category>Appearance</category>
            <description/>
        </property>
        <property key="heightUnit" type="enumeration" defaultValue="pixels">
            <caption>Height unit</caption>
            <category>Appearance</category>
            <description>'Percentage of width' is the aspect ratio, 'Pixels' is absolute. Warning: When using 'Percentage of parent' the parent container must have an absolute height, else nothing is displayed.</description>
            <enumerationValues>
                <enumerationValue key="percentageOfWidth">Percentage of width</enumerationValue>
                <enumerationValue key="pixels">Pixels</enumerationValue>
                <enumerationValue key="percentageOfParent">Percentage of parent</enumerationValue>
            </enumerationValues>
        </property>
        <property key="height" type="integer" defaultValue="580">
            <caption>Height</caption>
            <category>Appearance</category>
            <description/>
        </property>
        <property key="onClickEvent" type="enumeration" defaultValue="doNothing">
            <caption>On click</caption>
            <category>Events</category>
            <description>Click on calender item</description>
            <enumerationValues>
                <enumerationValue key="doNothing">Do nothing</enumerationValue>
                <enumerationValue key="showPage">Show a page</enumerationValue>
                <enumerationValue key="callMicroflow">Call a microflow</enumerationValue>
                <enumerationValue key="callNanoflow">Call a nanoflow</enumerationValue>
            </enumerationValues>
        </property>
        <property key="onClickOpenPageAs" type="enumeration" defaultValue="popup">
            <caption>On click open page as</caption>
            <category>Events</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="popup">Popup</enumerationValue>
                <enumerationValue key="content">Full page</enumerationValue>
                <enumerationValue key="modal">Blocking popup</enumerationValue>
            </enumerationValues>
        </property>
        <property key="onClickPage" type="form" required="false">
            <caption>On click page</caption>
            <category>Events</category>
            <description/>
        </property>
        <property key="onClickMicroflow" type="microflow" required="false" entityProperty="eventEntity">
            <caption>On click microflow</caption>
            <category>Events</category>
            <description/>
            <returnType type="Void" />
        </property>
        <property key="onClickNanoflow" type="nanoflow" required="false" entityProperty="eventEntity">
            <caption>On click nanoflow</caption>
            <category>Events</category>
            <description/>
            <returnType type="Void" />
        </property>
        <property key="onCreate" type="enumeration" defaultValue="doNothing">
            <caption>On create</caption>
            <category>Events</category>
            <description>Create is triggered when a time slot is selected</description>
            <enumerationValues>
                <enumerationValue key="doNothing">Do nothing</enumerationValue>
                <enumerationValue key="showPage">Show a page</enumerationValue>
                <enumerationValue key="callMicroflow">Call a microflow</enumerationValue>
                <enumerationValue key="callNanoflow">Call a nanoflow</enumerationValue>
            </enumerationValues>
        </property>
        <property key="onCreateOpenPageAs" type="enumeration" defaultValue="popup">
            <caption>On create open page as</caption>
            <category>Events</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="popup">Popup</enumerationValue>
                <enumerationValue key="content">Full page</enumerationValue>
                <enumerationValue key="modal">Blocking popup</enumerationValue>
            </enumerationValues>
        </property>
        <property key="onCreatePage" type="form" required="false">
            <caption>On create page</caption>
            <category>Events</category>
            <description/>
        </property>
        <property key="onCreateMicroflow" type="microflow" required="false" entityProperty="eventEntity">
            <caption>On create microflow</caption>
            <category>Events</category>
            <description/>
            <returnType type="Void" />
        </property>
        <property key="onCreateNanoflow" type="nanoflow" required="false" entityProperty="eventEntity">
            <caption>On create nanoflow</caption>
            <category>Events</category>
            <description/>
            <returnType type="Void" />
        </property>
        <property key="onChangeEvent" type="enumeration" defaultValue="doNothing">
            <caption>On change</caption>
            <category>Events</category>
            <description>Change event is triggered on moving and changing the start or end time of by resizing</description>
            <enumerationValues>
                <enumerationValue key="doNothing">Do nothing</enumerationValue>
                <enumerationValue key="callMicroflow">Call a microflow</enumerationValue>
                <enumerationValue key="callNanoflow">Call a nanoflow</enumerationValue>
            </enumerationValues>
        </property>
        <property key="onChangeMicroflow" type="microflow" required="false" entityProperty="eventEntity">
            <caption>On change microflow</caption>
            <category>Events</category>
            <description/>
            <returnType type="Void" />
        </property>
        <property key="onChangeNanoflow" type="nanoflow" required="false" entityProperty="eventEntity">
            <caption>On change nanoflow</caption>
            <category>Events</category>
            <description/>
            <returnType type="Void" />
        </property>
    </properties>
</widget>
