<?xml version="1.0" encoding="utf-8" ?>
<widget id="com.mendix.widget.custom.calendar.Calendar" needsEntityContext="true" offlineCapable="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Calendar</name>
    <description>Display and manage calendar events</description>
    <icon/>
    <properties>
        <property key="defaultView" type="enumeration" defaultValue="month">
            <caption>Default view</caption>
            <category>Appearance</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="month">Month</enumerationValue>
                <enumerationValue key="week">Week</enumerationValue>
                <enumerationValue key="work_week">Work week</enumerationValue>
                <enumerationValue key="day">Day</enumerationValue>
                <enumerationValue key="agenda">Agenda</enumerationValue>
            </enumerationValues>
        </property>
        <property key="popup" type="boolean" defaultValue="true">
            <caption>Popup</caption>
            <category>Appearance</category>
            <description>Show truncated events in an overlay when you click the "+x more" link</description>
        </property>
        <property key="selectable" type="boolean" defaultValue="true">
            <caption>Selectable</caption>
            <category>Appearance</category>
            <description/>
        </property>
        <property key="editable" type="enumeration" defaultValue="default">
            <caption>Editable</caption>
            <category>Appearance</category>
            <description>The default option is based on the page settings and the attribute's write access</description>
            <enumerationValues>
                <enumerationValue key="default">Default</enumerationValue>
                <enumerationValue key="never">Never</enumerationValue>
            </enumerationValues>
        </property>
        <property key="dataSource" type="enumeration" defaultValue="XPath">
            <caption>Data source</caption>
            <category>Event data</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="XPath">Database</enumerationValue>
                <enumerationValue key="microflow">Microflow</enumerationValue>
            </enumerationValues>
        </property>
        <property key="eventEntity" type="entity" required="false">
            <caption>Event entity</caption>
            <category>Event data</category>
            <description/>
        </property>
        <property key="entityConstraint" type="entityConstraint" entityProperty="eventEntity" required="false">
            <caption>XPath</caption>
            <category>Event data</category>
            <description/>
        </property>
		<property key="dataSourceMicroflow" type="microflow" required="false">
			<caption>Data source microflow</caption>
			<category>Event data</category>
			<description></description>
			<returnType type="Void" />
		</property>
        <property key="titleAttribute" type="attribute" entityProperty="eventEntity" isPath="optional" pathType="reference" required="false">
            <caption>Title</caption>
            <category>Event data</category>
            <description/>
            <attributeTypes>
                <attributeType name="String"/>
            </attributeTypes>
        </property>
        <property key="startAttribute" type="attribute" entityProperty="eventEntity" required="false">
            <caption>Start</caption>
            <category>Event data</category>
            <description/>
            <attributeTypes>
                <attributeType name="DateTime"/>
            </attributeTypes>
        </property>
        <property key="endAttribute" type="attribute" entityProperty="eventEntity" required="false">
            <caption>End</caption>
            <category>Event data</category>
            <description/>
            <attributeTypes>
                <attributeType name="DateTime"/>
            </attributeTypes>
        </property>
        <property key="onClickEvent" type="enumeration" defaultValue="doNothing">
            <caption>On click event</caption>
            <category>Events</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="doNothing">Do nothing</enumerationValue>
                <enumerationValue key="showPage">Show a page</enumerationValue>
                <enumerationValue key="callMicroflow">Call a microflow</enumerationValue>
                <enumerationValue key="callNanoflow">Call a nanoflow</enumerationValue>
            </enumerationValues>
        </property>
        <property key="eventPage" type="form" required="false">
            <caption>Page</caption>
            <category>Events</category>
            <description>The page that will be opened on clicking an event</description>
        </property>
        <property key="openPageAs" type="enumeration" defaultValue="content">
            <caption>Open page as</caption>
            <category>Events</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="content">Full page</enumerationValue>
                <enumerationValue key="popup">Popup</enumerationValue>
                <enumerationValue key="modal">Blocking popup</enumerationValue>
            </enumerationValues>
        </property>
        <property key="eventMicroflow" type="microflow" required="false">
            <caption>Microflow</caption>
            <category>Events</category>
            <description>The microflow that will be executed on clicking an event</description>
            <returnType type="Void" />
        </property>
        <property key="eventNanoflow" type="nanoflow" required="false">
            <caption>Nanoflow</caption>
            <category>Events</category>
            <description>The nanoflow that will be executed on clicking an event</description>
            <returnType type="Void" />
        </property>
        <property key="onClickSlotEvent" type="enumeration" defaultValue="doNothing">
            <caption>On click slot</caption>
            <category>Events</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="doNothing">Do nothing</enumerationValue>
                <enumerationValue key="showPage">Show a page</enumerationValue>
                <enumerationValue key="callMicroflow">Call a microflow</enumerationValue>
                <enumerationValue key="callNanoflow">Call a nanoflow</enumerationValue>
            </enumerationValues>
        </property>
        <property key="slotPage" type="form" required="false">
            <caption>New event page</caption>
            <category>Events</category>
            <description>The page that will be opened on clicking a slot</description>
        </property>
        <property key="slotMicroflow" type="microflow" required="false">
            <caption>New event microflow</caption>
            <category>Events</category>
            <description>The microflow that will be executed on clicking a slot</description>
            <returnType type="Void" />
        </property>
        <property key="slotNanoflow" type="nanoflow" required="false">
            <caption>New event nanoflow</caption>
            <category>Events</category>
            <description>The nanoflow that will be executed on clicking a slot</description>
            <returnType type="Void" />
        </property>
        <property key="onDropEvent" type="enumeration" defaultValue="doNothing">
            <caption>On drop event</caption>
            <category>Events</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="doNothing">Do nothing</enumerationValue>
                <enumerationValue key="showPage">Show a page</enumerationValue>
                <enumerationValue key="callMicroflow">Call a microflow</enumerationValue>
                <enumerationValue key="callNanoflow">Call a nanoflow</enumerationValue>
            </enumerationValues>
        </property>
        <property key="onDropPage" type="form" required="false">
            <caption>On drop page</caption>
            <category>Events</category>
            <description>The page that will be opened on droping an event</description>
        </property>
        <property key="onDropMicroflow" type="microflow" required="false">
            <caption>On drop microflow</caption>
            <category>Events</category>
            <description>The microflow that will be executed on droping an event</description>
            <returnType type="Void" />
        </property>
        <property key="onDropNanoflow" type="nanoflow" required="false">
            <caption>On drop nanoflow</caption>
            <category>Events</category>
            <description>The nanoflow that will be executed on droping an event</description>
            <returnType type="Void" />
        </property>
    </properties>
</widget>
