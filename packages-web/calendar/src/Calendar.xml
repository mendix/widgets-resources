<?xml version="1.0" encoding="utf-8" ?>
<widget id="com.mendix.widget.custom.calendar.Calendar" needsEntityContext="true" offlineCapable="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Calendar</name>
    <description>Display and manage calendar events</description>
    <icon/>
    <properties>
        <property key="dataSource" type="enumeration" defaultValue="XPath">
            <caption>Data source</caption>
            <category>Data source</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="context">Context</enumerationValue>
                <enumerationValue key="XPath">Database</enumerationValue>
                <enumerationValue key="microflow">Microflow</enumerationValue>
                <enumerationValue key="nanoflow">Nanoflow</enumerationValue>
            </enumerationValues>
        </property>
        <property key="eventEntity" type="entity" required="false">
            <caption>Event entity</caption>
            <category>Data source</category>
            <description/>
        </property>
        <property key="entityConstraint" type="entityConstraint" entityProperty="eventEntity" required="false">
            <caption>XPath</caption>
            <category>Data source</category>
            <description/>
        </property>
		<property key="dataSourceMicroflow" type="microflow" required="false">
			<caption>Data source microflow</caption>
			<category>Data source</category>
			<description></description>
			<returnType type="Void"/>
		</property>
		<property key="dataSourceNanoflow" type="nanoflow" required="false">
			<caption>Data source nanoflow</caption>
			<category>Data source</category>
			<description></description>
			<returnType type="Void"/>
		</property>
        <property key="titleAttribute" type="attribute" entityProperty="eventEntity">
            <caption>Title</caption>
            <category>Data source</category>
            <description/>
            <attributeTypes>
                <attributeType name="String"/>
            </attributeTypes>
        </property>
        <property key="allDayAttribute" type="attribute" entityProperty="eventEntity" required="false">
            <caption>All day</caption>
            <category>Data source</category>
            <description/>
            <attributeTypes>
                <attributeType name="Boolean"/>
            </attributeTypes>
        </property>
        <property key="startAttribute" type="attribute" entityProperty="eventEntity" required="false">
            <caption>Start</caption>
            <category>Data source</category>
            <description/>
            <attributeTypes>
                <attributeType name="DateTime"/>
            </attributeTypes>
        </property>
        <property key="endAttribute" type="attribute" entityProperty="eventEntity" required="false">
            <caption>End</caption>
            <category>Data source</category>
            <description/>
            <attributeTypes>
                <attributeType name="DateTime"/>
            </attributeTypes>
        </property>
        <property key="eventColor" type="attribute" entityProperty="eventEntity" required="false">
            <caption>Event color</caption>
            <category>Data source</category>
            <description/>
            <attributeTypes>
                <attributeType name="Enum" />
                <attributeType name="String" />
            </attributeTypes>
        </property>
        <property key="views" type="enumeration" defaultValue="standard">
            <caption>View</caption>
            <category>Appearance</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="standard">Standard</enumerationValue>
                <enumerationValue key="custom">Custom</enumerationValue>
            </enumerationValues>
        </property>
        <property key="objectList" type="object" isList="true" required="false">
            <caption>Custom toolbar</caption>
            <category>Appearance</category>
            <description/>
            <properties>
                <property key="customView" type="enumeration" defaultValue="month">
                    <caption>Views</caption>
                    <category>Appearance</category>
                    <description/>
                        <enumerationValues>
                        <enumerationValue key="month">Month</enumerationValue>
                        <enumerationValue key="week">Week</enumerationValue>
                        <enumerationValue key="work_week">Work week</enumerationValue>
                        <enumerationValue key="day">Day</enumerationValue>
                        <enumerationValue key="agenda">Agenda</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="customCaption" type="translatableString" required="false">
                    <caption>Custom caption</caption>
                    <category>Appearance</category>
                    <description/>
                </property>
            </properties>
        </property>
        <property key="defaultView" type="enumeration" defaultValue="month">
            <caption>Default view</caption>
            <category>Appearance</category>
            <description/>
                <enumerationValues>
                    <enumerationValue key="month">Month</enumerationValue>
                    <enumerationValue key="week">Week</enumerationValue>
                    <enumerationValue key="work_week">Work week</enumerationValue>
                    <enumerationValue key="day">Day</enumerationValue>
                    <enumerationValue key="agenda">Agenda</enumerationValue>
                </enumerationValues>
        </property>
        <property key="startPositionAttribute" type="attribute" required="false">
            <caption>Start position attribute</caption>
            <category>Appearance</category>
            <description>The date on which the calendar should start</description>
            <attributeTypes>
                <attributeType name="DateTime"/>
            </attributeTypes>
        </property>
        <property key="popup" type="boolean" defaultValue="true">
            <caption>Show truncated events</caption>
            <category>Appearance</category>
            <description>Show truncated events in an overlay when you click the "+x more" link</description>
        </property>
        <property key="selectable" type="boolean" defaultValue="true">
            <caption>Event editable</caption>
            <category>Appearance</category>
            <description/>
        </property>
        <property key="create" type="boolean" defaultValue="true">
            <caption>Create</caption>
            <category>Appearance</category>
            <description/>
        </property>
        <property key="change" type="boolean" defaultValue="true">
            <caption>change ???</caption> <!-- handles on the side -->
            <category>Appearance</category>
            <description/>
        </property>
        <property key="editable" type="enumeration" defaultValue="default">
            <caption>Editable</caption>
            <category>Appearance</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="default">Default</enumerationValue>
                <enumerationValue key="never">Never</enumerationValue>
            </enumerationValues>
        </property>
