{
    "name": "@widgets-resources/utils-react-widgets",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "start": "webpack-dev-server --config=./configs/webpack.config.dev.js --open",
        "dev:grunt": "grunt -b ./ --gruntfile ./configs/Gruntfile.js",
        "dev": "gulp watch --gulpfile scripts/gulp.js",
        "typeCheck": "tsc --noEmit",
        "pretest": "tsc && npm run lint && npm run build",
        "test": "npm run test:unit && npm run test:conditional",
        "test:conditional": "node ./node_modules/mendix-widget-build-script/dist/CheckPullRequestFromFork.js && echo 'Skip tests on forked pull request' || npm run deployAndTest",
        "test:dev": "karma start ./configs/karma.conf.js",
        "test:unit": "karma start ./configs/karma.conf.js --single-run --codeCoverage",
        "test:e2e": "tsc -p ./test-configs/e2e/tsconfig.json && cross-env URL=https://badge.mxapps.io/ && wdio ./test-configs/e2e/wdio.conf.js",
        "test:e2e:dev": "tsc -p ./test-configs/e2e/tsconfig.json && cross-env DEBUG=true && wdio ./test-configs/e2e/wdio.conf.js",
        "lint": "gulp lint --gulpfile scripts/gulp.js --subprojectPath packages-web/badge",
        "lint:fix": "npm run lint -- --fix",
        "deploy": " npm run updateProject && npm run deployApp",
        "build": "gulp build --gulpfile scripts/gulp.js",
        "release": "gulp release --gulpfile scripts/gulp.js --silent"
    },
    "bin": {
        "utils-react-widgets": "bin/mx-scripts.js"
    },
    "devDependencies": {
        "@types/core-js": "^2.5.0",
        "@types/enzyme": "^3.9.0",
        "@types/jasmine": "^3.3.9",
        "@types/karma": "^3.0.2",
        "@types/node": "^11.11.3",
        "@types/react": "^16.8.8",
        "@types/react-dom": "^16.8.2",
        "@types/webdriverio": "^4.13.3",
        "check-dependencies": "^1.0.1",
        "clean-webpack-plugin": "^3.0.0",
        "copy-webpack-plugin": "^5.0.1",
        "core-js": "^2.6.5",
        "cross-env": "^5.2.0",
        "css-loader": "^3.1.0",
        "eslint": "^6.1.0",
        "extract-text-webpack-plugin": "^4.0.0-beta.0",
        "fork-ts-checker-webpack-plugin": "^1.0.0",
        "grunt": "^1.0.3",
        "grunt-check-dependencies": "^1.0.0",
        "grunt-cli": "^1.3.2",
        "grunt-contrib-clean": "^2.0.0",
        "grunt-contrib-compress": "^1.4.1",
        "grunt-contrib-copy": "^1.0.0",
        "grunt-contrib-watch": "^1.1.0",
        "grunt-file-append": "0.0.7",
        "grunt-newer": "^1.3.0",
        "grunt-webpack": "^3.1.3",
        "gulp-eslint": "^6.0.0",
        "gulp-livereload": "^4.0.1",
        "gulp-tslint": "^8.1.4",
        "istanbul": "^0.4.3",
        "istanbul-instrumenter-loader": "^3.0.0",
        "jasmine": "^3.3.1",
        "json-loader": "^0.5.4",
        "karma": "^4.2.0",
        "karma-chrome-launcher": "^3.0.0",
        "karma-coverage": "^1.1.2",
        "karma-jasmine": "^2.0.1",
        "karma-jasmine-html-reporter": "^1.4.0",
        "karma-remap-istanbul": "^0.6.0",
        "karma-sourcemap-loader": "^0.3.7",
        "karma-webpack": "^4.0.2",
        "lerna": "^3.15.0",
