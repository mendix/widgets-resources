<?xml version="1.0" encoding="utf-8" ?>
<widget id="com.mendix.widget.custom.imageviewer.ImageViewer" needsEntityContext="true" offlineCapable="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Image viewer</name>
    <description>Change a number value using a slider</description>
    <icon/>
    <properties>
        <property key="source" type="enumeration" defaultValue="imageUrlAttribute">
            <caption>Data source</caption>
            <category>Data source</category>
            <description></description>
            <enumerationValues>
                <enumerationValue key="systemImage">System image</enumerationValue> <!-- placed in system.image inheritated dataview -->
                <enumerationValue key="imageUrlAttribute">Dynamic URL</enumerationValue> <!-- URL outside of mendx, URL, based on context attribute -->
                <enumerationValue key="staticUrl">Static URL</enumerationValue> <!-- URL outside of mendix, Static URL, not context based -->
                <enumerationValue key="staticImage">Static Image</enumerationValue> <!-- Static source mendix  -->
            </enumerationValues>
        </property>
        <property key="systemImageAttribute" type="attribute" required="false" isPath="optional" pathType="reference">
            <caption>System image</caption>
            <category>Data source</category>
            <description>Holds the url of an image</description> 
            <attributeTypes>
                <attributeType name="String"/> 
            </attributeTypes>
        </property>
        <property key="imageAttribute" type="attribute" required="false" isPath="optional" pathType="reference">
            <caption>Dynamic URL</caption>
            <category>Data source</category>
            <description>Image url based on context</description> 
            <attributeTypes>
                <attributeType name="String"/> 
            </attributeTypes>
        </property>
        <property key="static_Url" type="string" required="false">
            <caption>Static URL</caption>
            <category>Data source</category>
            <description>The url of the external image</description>
        </property>
        <property key="static_Image" type="image" required="false">
            <caption>Static image</caption>
            <category>Data source</category>
            <description>The image from the modeler</description>
        </property>
        <property key="widthUnit" type="enumeration" defaultValue="pixels">
            <caption>Width unit</caption>
            <category>Appearance</category>
            <description>No inline style will be set on auto. Percentage relative to parent container</description>
            <enumerationValues>
                <enumerationValue key="auto">Auto</enumerationValue>
                <enumerationValue key="pixels">Pixels</enumerationValue>
                <enumerationValue key="percentage">Percentage</enumerationValue>
            </enumerationValues>
        </property>
        <property key="width" type="integer" defaultValue="300">
            <caption>Width</caption>
            <category>Appearance</category>
            <description>Maximum width of the image in pixels.</description>
        </property>
        <property key="heightUnit" type="enumeration" defaultValue="auto">
            <caption>Height unit</caption>
            <category>Appearance</category>
            <description>No inline style will be set on auto. Percentage is relative to parent container only when parent has an absolute height.</description>
            <enumerationValues>
                <enumerationValue key="auto">Auto</enumerationValue>
                <enumerationValue key="pixels">Pixels</enumerationValue>
                <enumerationValue key="percentage">Percentage</enumerationValue>
            </enumerationValues>
        </property>
        <property key="height" type="integer" defaultValue="300">
            <caption>Height</caption>
            <category>Appearance</category>
            <description>Maximum height of the image in pixels.</description>
        </property>
    </properties>
</widget>
