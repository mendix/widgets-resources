{
  "name": "rich-text",
  "widgetName": "RichText",
  "version": "1.0.1",
  "description": "Rich inline or toolbar text editing",
  "scripts": {
    "start": "nodemon --watch webpack.config.js --watch Gruntfile.js --exec \"grunt",
    "emit": "tsc",
    "pretest": "tsc && npm run lint && npm run build",
    "test": "npm run test:unit && npm run test:conditional",
    "test:conditional": "node ./node_modules/mendix-widget-build-script/dist/CheckPullRequestFromFork.js && echo 'Skip tests on forked pull request' || npm run deployAndTest",
    "test:dev": "karma start",
    "test:unit": "karma start --single-run --codeCoverage && node tests/remap.js",
    "test:e2e": "tsc -p ./tests/e2e/tsconfig.json && wdio ./tests/e2e/wdio.conf.js",
    "test:e2e:dev": "tsc -p ./tests/e2e/tsconfig.json && set DEBUG=true&& wdio ./tests/e2e/wdio.conf.js",
    "lint": "tslint -c tslint.json '**/*.ts' '**/*.tsx' --exclude '**/node_modules/**'",
    "lint:fix": "npm run lint -- --fix",
    "deploy": " npm run updateProject && npm run deployApp",
    "build": "grunt release",
    "updateProject": "node ./node_modules/mendix-widget-build-script/dist/UpdateMxProject.js",
    "deployApp": "node ./node_modules/mendix-widget-build-script/dist/DeployMxApp.js",
    "deployAndTest": "npm run deploy && npm run test:e2e"
  },
  "pre-commit": [
    "emit",
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mendixlabs/rich-text"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mendixlabs/rich-text/issues"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.1",
    "@types/core-js": "^0.9.42",
    "@types/enzyme": "^2.8.6",
    "@types/jasmine": "^2.5.53",
    "@types/karma": "^0.13.36",
    "@types/quill": "0.0.31",
    "@types/react": "^15.0.28",
    "@types/react-dom": "^15.5.3",
    "@types/sanitize-html": "^1.13.31",
    "@types/webdriverio": "^4.8.4",
    "check-dependencies": "^1.0.1",
    "copy-webpack-plugin": "^4.0.1",
    "core-js": "^2.5.0",
    "css-loader": "^0.28.2",
    "enzyme": "^2.9.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "grunt": "1.0.1",
    "grunt-check-dependencies": "^1.0.0",
    "grunt-contrib-clean": "^1.1.0",
    "grunt-contrib-compress": "^1.4.3",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-file-append": "0.0.7",
    "grunt-newer": "^1.3.0",
    "grunt-webpack": "^3.0.2",
    "istanbul": "^0.4.3",
    "istanbul-instrumenter-loader": "^3.0.0",
    "jasmine": "^2.7.0",
    "json-loader": "^0.5.4",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-remap-istanbul": "^0.6.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.31",
    "karma-webpack": "^2.0.4",
    "mendix-client": "https://github.com/FlockOfBirds/Mendix-client-typing/archive/7.4.tar.gz",
    "mendix-widget-build-script": "^1.0.0-rc2",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "pre-commit": "^1.2.2",
    "raw-loader": "^0.5.1",
    "react": "^15.6.1",
    "react-addons-test-utils": "^15.6.0",
    "react-dom": "^15.6.1",
    "react-test-renderer": "^15.6.1",
    "remap-istanbul": "^0.9.0",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.18.2",
    "ts-loader": "^2.2.2",
    "tslint": "^5.6.0",
    "tslint-eslint-rules": "^4.1.0",
    "typescript": "^2.4.1",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "wdio-dot-reporter": "0.0.8",
    "wdio-jasmine-framework": "^0.3.2",
    "wdio-selenium-standalone-service": "0.0.9",
    "wdio-spec-reporter": "^0.1.1",
    "webdriverio": "^4.8.0",
    "webpack": "^3.5.4",
    "webpack-dev-server": "^2.7.1",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "quill": "^1.3.1",
    "sanitize-html": "^1.14.1"
  }
}
