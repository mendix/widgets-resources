<?xml version="1.0" encoding="utf-8" ?>
<widget id="com.mendix.widget.custom.signature.Signature" offlineCapable="true" needsEntityContext="true" mobile="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Signature</name>
    <description>A signature pad for capturing signatures</description>
    <icon></icon>

    <properties>
        <property key="showSignature" type="attribute" required="false">
            <caption>Has signature</caption>
            <category>Canvas</category>
            <description/>
            <attributeTypes>
                <attributeType name="Boolean" />
            </attributeTypes>
        </property>
        <property key="width" type="integer" defaultValue="500">
            <caption>Width</caption>
            <category>Canvas</category>
            <description>Height of the canvas(px)</description>
        </property>
        <property key="height" type="integer" defaultValue="500">
            <caption>Height</caption>
            <category>Canvas</category>
            <description>Width of the canvas(px)</description>
        </property>
        <property key="showGrid" type="boolean" defaultValue="true">
            <caption>Show background grid</caption>
            <category>Grid</category>
            <description/>
        </property>
        <property key="gridColor" type="string" defaultValue="#D7D7D7">
            <caption>Default grid color</caption>
            <category>Grid</category>
            <description/>
        </property>
        <property key="gridColumnSize" type="integer" defaultValue="50">
            <caption>Grid cell height</caption>
            <category>Grid</category>
            <description>Grid column size</description>
        </property>
        <property key="gridRowSize" type="integer" defaultValue="50">
            <caption>Grid cell width</caption>
            <category>Grid</category>
            <description>Grid row size</description>
        </property>
        <property key="gridBorder" type="integer" defaultValue="1">
            <caption>Grid border width</caption>
            <category>Grid</category>
            <description>Grid border line width(px)</description>
        </property>
        <property key="penType" type="enumeration" defaultValue="fountain">
            <caption>Type</caption>
            <category>Pen</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="fountain">Fountain pen</enumerationValue>
                <enumerationValue key="ballpoint">Ball point pen</enumerationValue>
                <enumerationValue key="marker">Highlight marker</enumerationValue>
            </enumerationValues>
        </property>
        <property key="penColor" type="string" defaultValue="#000">
            <caption>Color</caption>
            <category>Pen</category>
            <description>Color of the line e.g. green, #00FF00, rgb(0,255,0)</description>
        </property>
    </properties>
</widget>
