<?xml version="1.0" encoding="utf-8" ?>
<widget id="com.mendix.widget.custom.signature.Signature" offlineCapable="true" needsEntityContext="true" mobile="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Signature</name>
    <description>A signature pad for capturing signatures</description>
    <icon></icon>

    <properties>
        <property key="dataUrl" type="attribute" required="false" isPath="optional" pathType="reference">
            <caption>Data URL</caption>
            <category>Data source</category>
            <description>The Data URL attribute. Make sure this is an 'Unlimited String'! The signature is stored here as a Base64 encoded PNG image.</description>
            <attributeTypes>
                <attributeType name="String"/>
            </attributeTypes>
        </property>
        <property key="penColor" type="string" defaultValue="#000">
            <caption>Pen color</caption>
            <category>Pen Customization</category>
            <description>Pen color</description>
        </property>
        <property key="maxLineWidth" type="string" defaultValue="2.5">
            <caption>Maximum line width</caption>
            <category>Pen Customization</category>
            <description>Pathline maximum width</description>
        </property>
        <property key="minLineWidth" type="string" defaultValue="0.5">
            <caption>Minimum line width</caption>
            <category>Pen Customization</category>
            <description>Pathline minimum width</description>
        </property>
        <property key="velocityFilterWeight" type="string" defaultValue="0.7">
            <caption>Pen pressure weight</caption>
            <category>Pen Customization</category>
            <description>Velocity filter pressure</description>
        </property>
        <property key="editable" type="enumeration" defaultValue="default">
            <caption>Editable</caption>
            <category>Appearance</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="default">Default</enumerationValue>
                <enumerationValue key="never">Never</enumerationValue>
            </enumerationValues>
        </property>
        <property key="widthUnit" type="enumeration" defaultValue="percentage">
            <caption>Width unit</caption>
            <category>Appearance</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="pixels">Pixels</enumerationValue>
                <enumerationValue key="percentage">Percentage</enumerationValue>
            </enumerationValues>
        </property>
        <property key="width" type="integer" defaultValue="100">
            <caption>Width</caption>
            <category>Appearance</category>
            <description/>
        </property>
        <property key="heightUnit" type="enumeration" defaultValue="pixels">
            <caption>Height unit</caption>
            <category>Appearance</category>
            <description>'Percentage of width' is the aspect ratio, 'Pixels' is absolute. Warning: the 'Percentage of parent' only works when the parent has an absolute height, else it will not display</description>
            <enumerationValues>
                <enumerationValue key="pixels">Pixels</enumerationValue>
                <enumerationValue key="percentageOfWidth">Percentage of width</enumerationValue>
                <enumerationValue key="percentageOfParent">Percentage of parent</enumerationValue>
            </enumerationValues>
        </property>
        <property key="height" type="integer" defaultValue="75">
            <caption>Height</caption>
            <category>Appearance</category>
            <description/>
        </property>
        <property key="showGrid" type="boolean" defaultValue="true">
            <caption>Show background grid</caption>
            <category>Appearance</category>
            <description>Show background grid</description>
        </property>
        <property key="gridx" type="integer" defaultValue="50">
            <caption>Grid X</caption>
            <category>Appearance</category>
            <description>Grid column size</description>
        </property>
        <property key="gridy" type="integer" defaultValue="50">
            <caption>Grid Y</caption>
            <category>Appearance</category>
            <description>Grid row size</description>
        </property>
        <property key="gridColor" type="string" defaultValue="#777">
            <caption>Grid color</caption>
            <category>Appearance</category>
            <description>Grid color</description>
        </property>
        <property key="gridBorder" type="integer" defaultValue="1">
            <caption>Grid border width</caption>
            <category>Appearance</category>
            <description>Border width(px)</description>
        </property>
        <property key="afterSignEvent" type="enumeration" defaultValue="doNothing">
            <caption>After sign</caption>
            <category>Events</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="doNothing">Do nothing</enumerationValue>
                <enumerationValue key="callMicroflow">Call a microflow</enumerationValue>
                <enumerationValue key="callNanoflow">Call a nanoflow</enumerationValue>
            </enumerationValues>
        </property>
        <property key="timeout" type="integer" defaultValue="1000">
            <caption>Signature timeout</caption>
            <category>Events</category>
            <description>Time (in ms) to wait before considering the signature finished after the pen has stopped touching the pad</description>
        </property>
        <property key="afterSignMicroflow" type="microflow" required="false">
            <caption>After sign microflow</caption>
            <category>Events</category>
            <description>The microflow that will be executed after signing</description>
            <returnType type="Void" />
        </property>
        <property key="afterSignNanoflow" type="nanoflow" required="false">
            <caption>After sign nanoflow</caption>
            <category>Events</category>
            <description>The nanoflow that will be executed after signing</description>
            <returnType type="Void" />
        </property>
    </properties>
</widget>
