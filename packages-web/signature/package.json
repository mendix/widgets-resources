    "style-loader": "^0.23.1",
    "ts-loader": "^5.3.0",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.2.0",
    "typescript": "^3.1.5",
    "url-loader": "^1.1.2",
    "wdio-dot-reporter": "0.0.10",
    "wdio-jasmine-framework": "^0.3.7",
    "wdio-selenium-standalone-service": "0.0.10",
