{
    "name": "badge-web",
    "widgetName": "Badge",
    "version": "1.4.0",
    "description": "Shows a value as a badge or a color label",
    "copyright": "Mendix BV",
    "scripts": {
        "start": "utils-react-widgets start --subprojectPath $npm_package_config_subprojectFolder",
        "dev": "utils-react-widgets dev --subprojectPath $npm_package_config_subprojectFolder",
        "typeCheck": "tsc --noEmit",
        "pretest": "tsc && npm run lint && npm run build",
        "test": "npm run test:unit && npm run test:conditional",
        "test:conditional": "node ./node_modules/mendix-widget-build-script/dist/CheckPullRequestFromFork.js && echo 'Skip tests on forked pull request' || npm run deployAndTest",
        "test:dev": "utils-react-widgets test:dev --subprojectPath $npm_package_config_subprojectFolder",
        "test:unitl": "karma start ../utils-react-widgets/karma.conf.js --single-run --codeCoverage && node ../utils-react-widgets/tests/remap.js",
        "test:unit": "utils-react-widgets test:unit --subprojectPath $npm_package_config_subprojectFolder",
        "test:e2e:p": "cross-env URL=https://badge.mxapps.io/ && utils-react-widgets test:e2e --subprojectPath $npm_package_config_subprojectFolder",
        "test:e2e": "tsc -p ./tests/e2e/tsconfig.json",
        "test:e2e:0": "tsc -p ./tests/e2e/tsconfig.json && cross-env URL=https://badge.mxapps.io/ && wdio ../utils-react-widgets/test-configs/e2e/wdio.conf.js",
        "test:e2e:dev": "tsc -p ./tests/e2e/tsconfig.json && cross-env DEBUG=true && wdio ../utils-react-widgets/test-configs/e2e/wdio.conf.js",
        "lint": "tslint -c ../utils-react-widgets/configs/tslint.json '**/*.ts' '**/*.tsx' --exclude '**/node_modules/**'",
        "lint:fix": "npm run lint -- --fix",
        "build": "utils-react-widgets build --subprojectPath $npm_package_config_subprojectFolder"
    },
    "config": {
        "mendixHost": "http://localhost:8080",
        "developmentPort": 3000,
        "projectPath": "./tests/TestProjects/Mendix7/",
        "subprojectFolder": "packages-web/badge"
    },
    "pre-commit": [
        "typeCheck",
        "lint"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/mendixlabs/badge"
    },
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/mendixlabs/badge/issues"
    },
    "devDependencies": {
        "@types/classnames": "^2.2.3",
        "@widgets-resources/utils-react-widgets": "0.0.1",
        "gulp-tslint": "^8.1.4"
    },
    "dependencies": {
        "classnames": "^2.2.5"
    }
}
