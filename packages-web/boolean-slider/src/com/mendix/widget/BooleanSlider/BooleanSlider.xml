<?xml version="1.0" encoding="utf-8"?>
<widget id="com.mendix.widget.BooleanSlider.BooleanSlider" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../../../../../xsd/widget.xsd">
    <name>Boolean slider</name>
    <description>Toggle a boolean attribute</description>
    <icon/>
    <properties>
        <property key="label" type="string" required="false">
            <caption>Label</caption>
            <category>Display</category>
            <description/>
        </property>
        <property key="orientation" type="enumeration" defaultValue="horizontal">
            <caption>Orientation</caption>
            <category>Display</category>
            <description>Determines placement of the label in relation to the slider</description>
            <enumerationValues>
                <enumerationValue key="horizontal">Horizontal</enumerationValue>
                <enumerationValue key="vertical">Vertical</enumerationValue>
            </enumerationValues>
        </property>
        <property key="booleanAttribute" type="attribute" required="true">
            <caption>Boolean attribute</caption>
            <category>Data</category>
            <description>Attribute to toggle</description>
            <attributeTypes>
                <attributeType name="Boolean"/>
            </attributeTypes>
        </property>
        <property key="onChangeMicroflow" type="microflow" required="false">
            <caption>On change microflow</caption>
            <category>Behavior</category>
            <description>Microflow to trigger when button is toggled</description>
            <returnType type="Void"/>
        </property>
    </properties>
</widget>
