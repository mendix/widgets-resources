<?xml version="1.0" encoding="utf-8"?>
<widget id="com.mendix.widget.custom.switch.Switch" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../xsd/widget.xsd">
    <name>Switch</name>
    <description>Toggle a boolean attribute</description>
    <icon></icon>
    <properties>
        <property key="booleanAttribute" type="attribute" required="true">
            <caption>Boolean attribute</caption>
            <category>Data source</category>
            <description>Attribute to toggle</description>
            <attributeTypes>
                <attributeType name="Boolean"/>
            </attributeTypes>
        </property>
        <property key="label" type="string" required="false" defaultValue="">
            <caption>Label</caption>
            <category>Display</category>
            <description/>
        </property>
        <property key="orientation" type="enumeration" defaultValue="horizontal">
            <caption>Label orientation</caption>
            <category>Display</category>
            <description>Placement of the label in relation to the slider</description>
            <enumerationValues>
                <enumerationValue key="horizontal">Horizontal</enumerationValue>
                <enumerationValue key="vertical">Vertical</enumerationValue>
            </enumerationValues>
        </property>
        <property key="labelWidth" type="integer" defaultValue="3">
            <caption>Label width (weight)</caption>
            <category>Display</category>
            <description>How much of the total row width (12) the label should occupy. Should not be greater than 11. (Only for horizontal orientation)</description>
        </property>
        <property key="onChangeMicroflow" type="microflow" required="false">
            <caption>On change microflow</caption>
            <category>Behavior</category>
            <description>Microflow to trigger when button is toggled</description>
            <returnType type="Void"/>
        </property>
    </properties>
</widget>
