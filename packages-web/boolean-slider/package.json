{
  "name": "switch",
  "widgetName": "Switch",
  "version": "2.0.3",
  "description": "Toggle a boolean attribute",
  "scripts": {
    "start": "grunt",
    "emit": "tsc",
    "pretest": "tsc && npm run lint && npm run build",
    "test": "npm run test:unit && npm run test:conditional",
    "test:conditional": "node ./node_modules/mendix-widget-build-script/dist/CheckPullRequestFromFork.js && echo 'Skip tests on forked pull request' || npm run deployAndTest",
    "deployAndTest": "npm run deploy && npm run test:e2e",
    "test:dev": "karma start",
    "test:unit": "karma start --single-run --codeCoverage && node tests/remap.js",
    "test:e2e": "tsc -p ./tests/e2e/tsconfig.json && wdio ./tests/e2e/wdio.conf.js",
    "test:e2e:dev": "tsc -p ./tests/e2e/tsconfig.json && set DEBUG=true&& wdio ./tests/e2e/wdio.conf.js",
    "lint": "tslint -c tslint.json '**/*.ts' --exclude '**/node_modules/**'",
    "lint:fix": "npm run lint --fix",
    "deploy": "npm run updateProject && npm run deployApp",
    "build": "grunt release",
    "updateProject": "node ./node_modules/mendix-widget-build-script/dist/UpdateMxProject.js",
    "deployApp": "node ./node_modules/mendix-widget-build-script/dist/DeployMxApp.js"
  },
  "pre-commit": [
    "pretest",
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mendixlabs/boolean-slider"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mendixlabs/boolean-slider/issues"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.0",
    "@types/core-js": "^0.9.41",
    "@types/dojo": "^1.9.37",
    "@types/enzyme": "^2.8.7",
    "@types/jasmine": "^2.5.47",
    "@types/karma": "^0.13.35",
    "@types/react": "^15.6.0",
    "@types/react-dom": "^15.5.0",
    "@types/webdriverio": "^4.8.4",
    "check-dependencies": "^1.0.1",
    "clean-webpack-plugin": "^0.1.16",
    "copy-webpack-plugin": "^4.0.1",
    "core-js": "^2.5.1",
    "css-loader": "^0.28.7",
    "enzyme": "^2.8.2",
    "extract-text-webpack-plugin": "^3.0.0",
    "grunt": "1.0.1",
    "grunt-check-dependencies": "^1.0.0",
    "grunt-contrib-clean": "^1.1.0",
    "grunt-contrib-compress": "^1.4.1",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-file-append": "0.0.7",
    "grunt-newer": "^1.3.0",
    "grunt-webpack": "^3.0.0",
    "istanbul": "^0.4.3",
    "istanbul-instrumenter-loader": "^3.0.0",
    "jasmine": "^2.6.0",
    "json-loader": "^0.5.4",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.1.1",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-remap-istanbul": "^0.6.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.3",
    "mendix-client": "^7.4.1",
    "mendix-widget-build-script": "^1.0.0-rc2",
    "node-sass": "^4.5.2",
    "pre-commit": "^1.2.2",
    "raw-loader": "^0.5.1",
    "react": "^15.5.4",
    "react-addons-test-utils": "^15.5.1",
    "react-dom": "^15.5.4",
    "react-test-renderer": "^15.5.4",
    "remap-istanbul": "^0.9.5",
    "sass-loader": "^6.0.5",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.18.2",
    "ts-loader": "^2.3.7",
    "tslint": "^5.2.0",
    "tslint-eslint-rules": "^4.0.0",
    "typescript": "^2.5.2",
    "wdio-dot-reporter": "0.0.9",
    "wdio-jasmine-framework": "^0.3.2",
    "wdio-selenium-standalone-service": "0.0.9",
    "wdio-spec-reporter": "^0.1.1",
    "webdriverio": "^4.8.0",
    "webpack": "^3.5.6",
    "webpack-dev-server": "^2.4.5"
  },
  "dependencies": {
    "classnames": "^2.2.5"
  }
}
