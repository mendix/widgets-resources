{
  "name": "@mendix/shared-charts",
  "version": "1.0.0",
  "description": "Shared components for charts",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "tsc --watch",
    "prebuild": "rimraf ./dist",
    "build:components": "tsc && copy-and-watch \"src/**/*.{scss,svg,js}\" \"dist/\"",
    "build:shared": "rollup --config rollup.config.js",
    "build": "npm run build:components && npm run build:shared",
    "release:shared": "rollup --config rollup.config.js --configProduction",
    "release": "npm run build:components && npm run release:shared",
    "lint": "eslint --config ../../../.eslintrc.js --ext .jsx,.js,.ts,.tsx src/",
    "prepare": "npm run build",
    "test": "pluggable-widgets-tools test:unit:web",
    "do": "rollup --config rollup.config.js"
  },
  "devDependencies": {
    "@mendix/pluggable-widgets-tools": ">=8.9.2",
    "@types/react-plotly.js": "^2.5.0",
    "copy-and-watch": "^0.1.5",
    "eslint": "^7.20.0",
    "typescript": "^4.5.4",
    "rimraf": "^2.7.1"
  },
  "dependencies": {
    "@mendix/piw-utils-internal": "^1.0.0",
    "ace-builds": "^1.4.13",
    "classnames": "^2.2.6",
    "fast-json-patch": "^3.1.0",
    "json-source-map": "^0.6.1",
    "plotly.js": "^2.5.1",
    "react-ace": "^9.4.4",
    "react-plotly.js": "^2.5.1"
  },
  "files": [
    "dist",
    "hooks",
    "rollup",
    "shared"
  ]
}
