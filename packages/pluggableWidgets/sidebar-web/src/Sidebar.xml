<?xml version="1.0" encoding="utf-8"?>
<widget id="com.mendix.widget.web.sidebar.Sidebar" needsEntityContext="true" offlineCapable="true"
        pluginWidget="true"
        xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../../../../node_modules/mendix/custom_widget.xsd">
    <name>Sidebar</name>
    <description>Display sidebar content conditionally.</description>
    <studioProCategory>Layout</studioProCategory>
    <studioCategory>Layout</studioCategory>
    <properties>
        <propertyGroup caption="General">
            <propertyGroup caption="General">
                <property key="contents" type="widgets" required="false">
                    <caption>Sidebar contents</caption>
                    <description/>
                </property>
                <property key="toggleMode" type="enumeration" defaultValue="push">
                    <caption>Toggle mode</caption>
                    <description/>
                    <enumerationValues>
                        <enumerationValue key="none">None</enumerationValue>
                        <enumerationValue key="push">Push content aside</enumerationValue>
                        <enumerationValue key="slideOver">Slide over content</enumerationValue>
                        <enumerationValue key="startExpandedShrink">Shrink content (initially expanded)
                        </enumerationValue>
                        <enumerationValue key="startCollapsedShrink">Shrink content (initially collapsed)
                        </enumerationValue>
                    </enumerationValues>
                </property>
            </propertyGroup>
            <propertyGroup caption="Dimensions">
                <property key="widthUnit" type="enumeration" defaultValue="pixels">
                    <caption>Width unit</caption>
                    <description>A percentage is relative to the viewport width.</description>
                    <enumerationValues>
                        <enumerationValue key="pixels">Pixels</enumerationValue>
                        <enumerationValue key="percentage">Percentage</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="widthValue" type="integer" defaultValue="100">
                    <caption>Width</caption>
                    <description/>
                </property>
                <property key="expandedWidthUnit" type="enumeration" defaultValue="pixels">
                    <caption>Expanded width unit</caption>
                    <description>A percentage is relative to the viewport width.</description>
                    <enumerationValues>
                        <enumerationValue key="pixels">Pixels</enumerationValue>
                        <enumerationValue key="percentage">Percentage</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="expandedWidthValue" type="integer" defaultValue="100">
                    <caption>Expanded width</caption>
                    <description/>
                </property>
                <property key="collapsedWidthUnit" type="enumeration" defaultValue="pixels">
                    <caption>Collapsed width unit</caption>
                    <description>A percentage is relative to the viewport width.</description>
                    <enumerationValues>
                        <enumerationValue key="pixels">Pixels</enumerationValue>
                        <enumerationValue key="percentage">Percentage</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="collapsedWidthValue" type="integer" defaultValue="100">
                    <caption>Collapsed width</caption>
                    <description/>
                </property>
            </propertyGroup>
        </propertyGroup>
    </properties>
</widget>
