{
  "name": "image-viewer-web",
  "widgetName": "ImageViewer",
  "version": "2.0.0",
  "description": "Display an image and enlarge it on click",
  "copyright": "Mendix BV",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mendix/widgets-resources.git"
  },
  "config": {
    "mendixHost": "http://localhost:8080",
    "developmentPort": 3000
  },
  "packagePath": "com.mendix.widget.custom",
  "scripts": {
    "start": "cross-env MPKOUTPUT=ImageViewer.mpk pluggable-widgets-tools start:server",
    "dev": "cross-env MPKOUTPUT=ImageViewer.mpk pluggable-widgets-tools start:web",
    "build": "cross-env MPKOUTPUT=ImageViewer.mpk pluggable-widgets-tools build:web",
    "format": "pluggable-widgets-tools format",
    "lint": "..\"/../../node_modules/.bin/eslint\" --config ../../../.eslintrc.js --ext .jsx,.js,.ts,.tsx src/",
    "test": "pluggable-widgets-tools test:unit:web",
    "pretest:e2e": "echo \"Skipping image-viewer-web e2e pretests\"",
    "test:e2e": "echo \"Skipping image-viewer-web e2e tests\"",
    "test:e2e:dev": "pluggable-widgets-tools test:e2e:web:dev",
    "release": "cross-env MPKOUTPUT=ImageViewer.mpk pluggable-widgets-tools release:web"
  },
  "devDependencies": {
    "@mendix/pluggable-widgets-tools": ">=8.9.2",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@types/classnames": "^2.2.6",
    "@types/react-modal": "^3.12.0",
    "cross-env": "^7.0.2"
  },
  "dependencies": {
    "@mendix/piw-utils-internal": "^1.0.0",
    "classnames": "^2.2.6",
    "react-modal": "^3.14.2"
  }
}
