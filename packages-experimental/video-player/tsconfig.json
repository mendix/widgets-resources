{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./",
    "outDir": "dist/tsc/",
    "noEmitOnError": true,
    "sourceMap": true,
    "module": "amd",
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "types": [
      "mendix-client",
      "jasmine",
      "core-js",
      "node"
    ],
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,
    "noLib": false,
    "watch": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "skipLibCheck": false,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react"
  },
  "exclude": [
    "dist/",
    "node_modules/",
    "tests"
  ]
}
