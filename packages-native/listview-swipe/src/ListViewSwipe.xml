<?xml version="1.0" encoding="utf-8"?>
<widget id="com.mendix.widget.native.listviewswipe.ListViewSwipe" supportedPlatform="Native" needsEntityContext="true"
        offlineCapable="true" pluginWidget="true" xmlns="http://www.mendix.com/widget/1.0/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../../../node_modules/mendix/custom_widget.xsd">
    <name>List View Swipe</name>
    <description/>
    <icon/>
    <properties>
        <propertyGroup caption="General">
            <property key="content" type="widgets">
                <caption>Content</caption>
                <description>Sample text input</description>
            </property>
            <property key="onPress" type="action" required="false">
                <caption>onPress</caption>
                <description/>
            </property>
        </propertyGroup>
        <propertyGroup caption="Left">
            <property key="leftRenderMode" type="enumeration" defaultValue="disabled">
                <caption>Render mode</caption>
                <description />
                <enumerationValues>
                    <enumerationValue key="disabled">Disabled</enumerationValue>
                    <enumerationValue key="action">Action</enumerationValue>
                    <enumerationValue key="buttons">Buttons</enumerationValue>
                </enumerationValues>
            </property>
            <property key="left" type="widgets" required="false">
                <caption>Left options</caption>
                <description>Sample text input</description>
            </property>
            <property key="onSwipeLeft" type="action" required="false">
                <caption>On swipe left</caption>
                <description/>
            </property>
            <property key="closeOnFinishLeft" type="boolean" defaultValue="false">
                <caption>Close after swipe?</caption>
                <description>Automatically close the left options when the action finishes. *Available only for "Action"</description>
            </property>
        </propertyGroup>
        <propertyGroup caption="Right">
            <property key="rightRenderMode" type="enumeration" defaultValue="disabled">
                <caption>Render mode</caption>
                <description />
                <enumerationValues>
                    <enumerationValue key="disabled">Disabled</enumerationValue>
                    <enumerationValue key="action">Action</enumerationValue>
                    <enumerationValue key="buttons">Buttons</enumerationValue>
                </enumerationValues>
            </property>
            <property key="right" type="widgets" required="false">
                <caption>Right options</caption>
                <description>Sample text input</description>
            </property>
            <property key="onSwipeRight" type="action" required="false">
                <caption>On swipe right</caption>
                <description/>
            </property>
            <property key="closeOnFinishRight" type="boolean" defaultValue="false">
                <caption>Close after swipe?</caption>
                <description>Automatically close the right options when the action finishes. *Available only for "Action"</description>
            </property>
        </propertyGroup>
    </properties>
</widget>
