{
    "name": "nanoflow-commons",
    "version": "1.0.0",
    "private": true,
    "license": "Apache-2.0",
    "scripts": {
        "start": "tsc --watch",
        "build": "npm run build:tsc && npm run build:babel",
        "prebuild:tsc": "rm -rf ./dist/tsc",
        "build:tsc": "tsc --project ./src/tsconfig.json",
        "prebuild:babel": "rm -rf ./dist/babel",
        "build:babel": "babel dist/tsc --out-dir dist/babel",
        "postbuild": "ts-node --project ./tsconfig.json scripts/copyActionsToTestProject.ts",
        "lint": "eslint --config ../../.eslintrc.js --ext .jsx,.js,.ts,.tsx src/"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "chrome": "49",
                        "firefox": "52",
                        "edge": "16",
                        "safari": "9",
                        "ie": "11",
                        "ios": "9",
                        "android": "5"
                    }
                }
            ]
        ],
        "sourceType": "script",
        "retainLines": true
    }
}
