{
    "name": "nanoflow-commons",
    "version": "1.0.0-beta",
    "private": true,
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/mendix/nanoflow-commons.git"
    },
    "scripts": {
        "start": "tsc --watch",
        "build": "npm run build:tsc && npm run build:babel",
        "prebuild:tsc": "rm -rf dist/tsc",
        "build:tsc": "tsc --project src/tsconfig.json",
        "prebuild:babel": "rm -rf dist/babel",
        "build:babel": "babel dist/tsc --out-dir dist/babel",
        "postbuild": "ts-node --project scripts/tsconfig.json scripts/copyActionsToTestProject.ts",
        "lint": "npm run lint:src && npm run lint:scripts",
        "lint:src": "tslint --project src/tsconfig.json --config src/tslint.json",
        "lint:scripts": "tslint --project scripts/tsconfig.json --config scripts/tslint.json"
    },
    "devDependencies": {
        "@babel/cli": "^7.4.4",
        "@babel/core": "^7.4.4",
        "@babel/preset-env": "^7.4.4",
        "@commitlint/cli": "^7.5.2",
        "@commitlint/config-conventional": "^7.5.0",
        "@types/big.js": "^4.0.5",
        "@types/node": "^11.13.8",
        "@types/react-native": "^0.57.50",
        "conventional-changelog-cli": "^2.0.17",
        "husky": "^2.1.0",
        "lint-staged": "^8.1.5",
        "mendix-client": "^7.15.7",
        "prettier": "^1.17.0",
        "pretty-quick": "^1.10.0",
        "ts-node": "^8.1.0",
        "tslint": "^5.16.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-react": "^4.0.0",
        "typescript": "^3.4.5"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "chrome": "49",
                        "firefox": "52",
                        "edge": "16",
                        "safari": "9",
                        "ie": "11",
                        "ios": "9",
                        "android": "5"
                    }
                }
            ]
        ],
        "sourceType": "script",
        "retainLines": true
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && pretty-quick --staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "src/*.{ts,tsx}": [
            "tslint --config src/tslint.json"
        ],
        "scripts/*.ts": [
            "tslint --config scripts/tslint.json"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "proseWrap": "always",
        "overrides": [
            {
                "files": "CHANGELOG.md",
                "options": {
                    "proseWrap": "preserve"
                }
            }
        ]
    }
}
