{
    "name": "nanoflow-commons",
    "version": "1.0.0-beta2",
    "private": true,
    "scripts": {
        "start": "tsc --watch",
        "prebuild": "rm -rf ./dist/tsc",
        "build": "tsc",
        "postbuild": "ts-node --project ./scripts/tsconfig.json ./scripts/copyActionsToTestProject.ts",
        "lint": "tslint --project tsconfig.json --config tslint.json"
    },
    "devDependencies": {
        "@commitlint/cli": "^7.5.2",
        "@commitlint/config-conventional": "^7.5.0",
        "@types/big.js": "^4.0.5",
        "@types/node": "^11.10.4",
        "@types/react-native": "^0.57.38",
        "husky": "^1.3.1",
        "lint-staged": "^8.1.5",
        "mendix-client": "^7.15.6",
        "prettier": "^1.16.4",
        "pretty-quick": "^1.10.0",
        "ts-node": "^8.0.2",
        "tslint": "^5.13.1",
        "tslint-config-prettier": "^1.18.0",
        "tslint-react": "^3.6.0",
        "typescript": "^3.3.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && pretty-quick --staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "tslint"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "proseWrap": "always",
        "overrides": [
            {
                "files": "CHANGELOG.md",
                "options": {
                    "proseWrap": "preserve"
                }
            }
        ]
    }
}
