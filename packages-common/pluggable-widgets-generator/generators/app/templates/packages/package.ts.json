{
  "name": "<%- packageName %>",
  "widgetName": "<%- widgetName %>",
  "version": "<%- version %>",
  "description": "<%- description %>",
  "copyright": "<%- copyright %>",
  "author": "<%- author %>",
  "config": {
    "widgetPath": "<%- projectPath %>/widgets",
    "projectPath": "<%- projectPath %>/",
    "mendixHost": "http://localhost:8080",
    "developmentPort": "3000"
  },
  "packagePath": "<%- packagePath %>",
  "scripts": {
    "start": "concurrently \"npm run mx-script start:server -- --open\" \"npm:dev\"",
    "dev": "npm run mx-script start:ts",
    "build": "npm run mx-script build:ts",
    "lint": "npm run mx-script lint",
    "lint:fix": "npm run mx-script lint:fix",
    "mx-script": "cd ./node_modules/@mendix/pluggable-widgets-tools && node bin/mx-scripts.js",<% if (unitTests || e2eTests) { %>
    "pretest": "npm run lint && npm run build",<% } %><% if (unitTests) { %>
    "test": "npm run mx-script test:unit -- --no-cache --ci<% if (e2eTests) { %> && npm run test:e2e<% } %>",
    "test:unit": "npm run mx-script test:unit -- --coverage",<% } %><% if (e2eTests) { %>
    "test:e2e": "export URL=https://badge.mxapps.io || set URL=https://badge.mxapps.io && npm run mx-script test:e2e:ts",
    "test:e2e:dev": "export DEBUG=true || set DEBUG=true && npm run mx-script test:e2e:ts",<% } %>
    "prerelease": "npm run lint",
    "release": "npm run mx-script release:ts"
  },
  "license": "<%- license %>",
  "devDependencies": {
    "@mendix/pluggable-widgets-tools": "^0.1.8",
    "@types/big.js": "^4.0.5",
    "@types/classnames": "^2.2.4",<% if (e2eTests) { %>
    "@types/webdriverio": "^4.13.0",<% } %><% if (unitTests || e2eTests) { %>
    "@types/enzyme": "^3.1.10",
    "@types/enzyme-adapter-react-16": "^1.0.2",<% } %>
    "@types/jest": "^24.0.0",
    "@types/react": "^16.8.17",
    "@types/react-dom": "^16.8.4",
    "@types/react-test-renderer": "^16.8.1"
  },
  "dependencies": {
    "big.js": "^5.2.2",
    "classnames": "^2.2.6"
  }
}
