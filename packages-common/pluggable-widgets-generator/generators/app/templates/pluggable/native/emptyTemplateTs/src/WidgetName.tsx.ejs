import { HelloWorldSample } from "./components/HelloWorldSample";
import { WidgetNameProps } from "../typings/WidgetNameProps";
import { Style } from "./utils/common";

export interface CustomStyle extends Style {
    container: ViewStyle;
    label: TextStyle;
}

export class WidgetName extends Component<WidgetNameProps<CustomStyle>> {
