{
    "name": "@mendix/pluggable-widgets-typing-generator",
    "version": "8.5.0",
    "description": "Mendix Pluggable Widgets typings generator",
    "license": "Apache-2.0",
    "copyright": "Mendix 2019",
    "author": {
        "name": "Diego Antonelli",
        "email": "diego.antonelli@mendix.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mendix/pluggable-widgets-typing-generator"
    },
    "keywords": [
        "typings",
        "typescript"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "dependencies": {
        "map-stream": "0.0.7",
        "plugin-error": "^1.0.1",
        "replace-ext": "^1.0.0",
        "xml2js": "^0.4.19"
    },
    "devDependencies": {
        "@types/jest": "^24.0.12",
        "@types/node": "^11.13.8",
        "@types/plugin-error": "^0.1.1",
        "@types/replace-ext": "0.0.27",
        "@types/vinyl": "^2.0.3",
        "@types/xml2js": "^0.4.4",
        "enzyme": "^3.7.0",
        "enzyme-to-json": "^3.3.4",
        "husky": "^2.2.0",
        "jest": "^24.8.0",
        "jest-junit": "^6.4.0",
        "lint-staged": "^8.1.5",
        "prettier": "^1.17.0",
        "pretty-quick": "^1.10.0",
        "tslint": "^5.20.0",
        "ts-jest": "^24.0.2",
        "typescript": "^3.6.3"
    },
    "scripts": {
        "prebuild": "rm -rf ./dist",
        "build": "./node_modules/.bin/tsc",
        "format": "pretty-quick",
        "prepare": "npm run build",
        "test": "jest --projects ./jest.config.js --no-cache --ci"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && pretty-quick --staged"
        }
    },
    "lint-staged": {
        "*.{ts}": [
            "tslint"
        ]
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "proseWrap": "always"
    }
}
